const { Pool } = require('pg');

const dbConfig = {
  user: 'dbadmin',               // use your custom DB user
  host: '127.0.0.1',             // localhost or remote host
  database: 'docchunker',        // new project-specific DB name
  password: 'Secure@1234!',      // updated secure password
  port: 5432,                    // default port
};

const dbPool = new Pool(dbConfig);

dbPool.connect()
  .then(() => {
    console.log('ðŸ“¦ Successfully connected to DocChunker PostgreSQL DB');
  })
  .catch((error) => {
    console.error('âŒ Connection to DB failed:', error.message);
  });

module.exports = dbPool;


npm install dotenv


